{
  "name": "clavis-js",
  "version": "0.1.0",
  "description": "Secure encrypted communication over asynchronous streams - TypeScript implementation",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "files": [
    "src",
    "index.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "bun test tests/",
    "test:same-lang": "bun test tests/same-lang/",
    "test:cross-lang": "bun test tests/cross-lang/",
    "test:build-rust": "cd tests/rust-binaries && cargo build --release",
    "typecheck": "bun x tsc --noEmit",
    "prepublishOnly": "bun run typecheck && bun test tests/same-lang/"
  },
  "keywords": [
    "encryption",
    "crypto",
    "x25519",
    "xchacha20-poly1305",
    "secure",
    "stream",
    "networking",
    "clavis",
    "encrypted-communication",
    "tls-alternative"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thewander02/clavis-js.git"
  },
  "bugs": {
    "url": "https://github.com/thewander02/clavis-js/issues"
  },
  "homepage": "https://github.com/thewander02/clavis-js#readme",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.14",
    "@types/node": "^22.15.21",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@noble/ciphers": "^2.0.1",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1"
  }
}
